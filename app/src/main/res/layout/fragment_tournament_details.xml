<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_details_fragment"
        android:src="@drawable/ic_millenium_puzzle"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/name_textview_tournament_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="20dp"
        android:text="Turnir br 0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_details_fragment" />

    <TextView
        android:id="@+id/address_textview_tournament_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="turnir 33"
        android:textSize="20dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_textview_tournament_details_fragment" />

    <TextView
        android:id="@+id/city_textview_tournament_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lipik"
        android:textSize="20dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_textview_tournament_details_fragment" />

    <TextView
        android:id="@+id/date_textview_tournament_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13.12.2111."
        android:textSize="20dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_textview_tournament_details_fragment" />

    <TextView
        android:id="@+id/time_textview_tournament_details_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:textSize="20dp"
        android:layout_margin="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_textview_tournament_details_fragment" />


    <Button
        android:id="@+id/map_btn_tournament_details_fragment"
        android:text="Show on Map"
        app:layout_constraintTop_toBottomOf="@+id/date_textview_tournament_details_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>